<div class="container">
    <div class="row">
        <div class="col-lg-8 offset-2">
            <form action="/actualizar" method="POST">
                <fieldset >
                  <legend><%= legend %></legend>
                  <div class="mb-3">
                    <label for="disabledTextInput" class="form-label"><%= label %></label>
                    <input name="id" type="text" id="disabledTextInput" class="form-control" placeholder="Escriba el id...">
                  </div>
                  <div class="mb-3">
                    <label for="disabledTextInput" class="form-label">Nombre</label>
                    <input name="nombre" type="text" id="disabledTextInput" class="form-control" placeholder="Escriba el nomber...">
                  </div>
                  <div class="mb-3">
                    <label for="disabledTextInput" class="form-label">Mensaje</label>
                    <input name="mensaje" type="text" id="disabledTextInput" class="form-control" placeholder="Escriba el mensaje (130 Max)...">
                  </div>
                  <button type="submit" class="btn btn-primary"><%= button %></button>
                </fieldset>
              </form>
        </div>
    </div>
</div>